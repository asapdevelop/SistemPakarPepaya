<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    android:layout_marginTop="2dip"
    android:layout_marginBottom="2dip">
    <LinearLayout
        android:id="@+id/layout_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ADDEE8"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cv_gejala"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Gejala"
            android:textColor="@color/black_text"
            android:textSize="@dimen/_15ssp"
            android:layout_weight="1"/>

        <RadioGroup
            android:id="@+id/rb_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:visibility="gone"
            >
            <RadioButton
                android:id="@+id/radio02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pasti Tidak (0,1)" />
            <RadioButton
                android:id="@+id/radio03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Hampir Pasti Tidak (0,2)" />
            <RadioButton
                android:id="@+id/radio031"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Kemungkinan Besar Tidak (0,3)" />
            <RadioButton
                android:id="@+id/radio04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mungkin Tidak (0,4)" />
            <RadioButton
                android:id="@+id/radio041"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kemungkinan Kecil (0,5)" />
            <RadioButton
                android:id="@+id/radio06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mungkin (0.6)"/>
            <RadioButton
                android:id="@+id/radio061"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kemungkinan Besar (0.7)"/>
            <RadioButton
                android:id="@+id/radio08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hampir_pasti_0_8" />
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pasti_1" />
        </RadioGroup>
    </LinearLayout>


</androidx.cardview.widget.CardView>